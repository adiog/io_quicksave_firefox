{
  "manifest_version": 2,
  "name": "quicksave.io",
  "version": "0.0",
  "author": "Aleksander Gajewski",
  "description": "quicksave.io - user content database",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png",
    "512": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "quicksave.io",
    "default_popup": "popup_options.html"
  },
  "permissions": [
    "*://*.quicksave.pl/",
    "*://*.quicksave.io/",
    "*://*.localhost/",
    "tabs",
    "cookies", 
    "contextMenus", 
    "notifications",
    "storage"
  ],
  "background": {
     "scripts": [
       "env.js",
       "shared/ConsoleLog.js",
       "LocalStorage_Chrome.js",
       "shared/Request.js",
       "shared/API.js",
       "plugin.js",
       "background.js"
     ]
  },
  "options_ui": {
    "page": "popup_options.html",
    "chrome_style": true
  }
}

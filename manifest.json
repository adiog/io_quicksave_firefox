{
  "manifest_version": 2,
  "name": "quicksave.io",
  "version": "0.0",
  "author": "Aleksander Gajewski",
  "description": "quicksave.io - Firefox Add-on",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png",
    "512": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "quicksave.io"
  },
  "permissions": [
    "*://*.quicksave.io/",
    "tabs",
    "cookies", 
    "contextMenus", 
    "notifications",
    "storage"
  ],
  "background": {
     "scripts": [
       "env.js",
       "shared/ConsoleLog.js",
       "shared/Request.js",
       "shared/API.js",
       "plugin.js",
       "background.js"
     ]
  }
}
